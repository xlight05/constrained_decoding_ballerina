{
  "name": "ballerina-gbnf-validator",
  "version": "1.0.0",
  "description": "Validate Ballerina code using GBNF grammar specification",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/index.js",
    "validate": "npm run build && node dist/index.js main.bal",
    "dev": "tsc && node dist/index.js",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "ballerina",
    "gbnf",
    "validator",
    "parser",
    "grammar"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "gbnf": "^0.1.41"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0"
  }
}
